<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    tools:context=".Compose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/ComposeTitle"
            android:layout_width="156dp"
            android:layout_height="86dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="@string/compose_numbers"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/ComposeQuestion"
            android:layout_width="296dp"
            android:layout_height="84dp"
            android:text="@string/please_compose_the_shown_number"
            android:textAlignment="center"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/QuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/QuestionNumber"
            android:textSize="48sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Input1"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="124dp"
                android:ems="10"
                android:hint="@string/number1"
                android:inputType="number"
                android:maxLength="3"
                android:textColorHint="#01579B" />

            <TextView
                android:id="@+id/OperationSym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/OperationSym"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/Input2"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="124dp"
                android:ems="10"
                android:hint="@string/number2"
                android:inputType="number"
                android:maxLength="3"
                android:singleLine="true"
                android:textColorHint="#01579B" />

        </LinearLayout>

        <Button
            android:id="@+id/SubmitButton"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="158dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="60dp"
            android:text="@string/submit"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/BackButton"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/back_to_home"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>